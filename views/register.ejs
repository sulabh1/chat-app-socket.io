<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card rounded shadow">
      <div class=""><%- include('partials/messages'); %></div>
      <div class="card-header border-none bg-secondary.bg-gradient text-muted">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
      </div>
      <div class="card-body">
        <form action="/users/register" method="POST">
          <h1>
            <a href="/users/facebook" class="btn-social btn-facebook btn-lg">
              <i class="fab fa-facebook"></i> Sign Up With Facebook
            </a>
          </h1>
          <h1>
            <a href="/users/google" class="btn-social btn-gplus btn-lg">
              <i class="fab fa-google-plus"></i> Sign Up With Google
            </a>
          </h1>
          <div class="form-group my-3">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group my-3">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group my-3">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group my-3">
            <label for="passwordConfirm">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="passwordConfirm"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof passwordConfirm != 'undefined' ? passwordConfirm : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
      </div>
      <div class="card-footer text-muted .bg-secondary.bg-gradient">
        <p class="mt-4 mx-auto text-center">
          Have An Account? &nbsp; <a href="/users/login">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>
